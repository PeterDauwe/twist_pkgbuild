# Maintainer: Erik Dubois <erik.dubois@gmail.com>
pkgname=twist-calamares-config-i3-git
_pkgname=twist-calamares-config-i3
_destname="/etc/calamares"
_licensedir="/usr/share/twistlinux/licenses/"
pkgver=21.09
pkgrel=04
pkgdesc="calamares for twistlinux"
arch=('any')
url="https://github.com/twistlinux/${_pkgname}"
license=('GPL3')
makedepends=('git')
depends=()
provides=("${pkgname}")
options=(!strip !emptydirs)
source=(${_pkgname}::"git+https://github.com/twistlinux/${_pkgname}.git")
sha256sums=('SKIP')
install='readme.install'
package() {
	mkdir -p "${pkgdir}${_licensedir}${_pkgname}"
	mv "${srcdir}/${_pkgname}/"LICENSE "${pkgdir}${_licensedir}${_pkgname}/LICENSE"
	mkdir -p "${pkgdir}${_destname}"
	cp -r "${srcdir}/${_pkgname}/calamares/"* "${pkgdir}${_destname}"
}
